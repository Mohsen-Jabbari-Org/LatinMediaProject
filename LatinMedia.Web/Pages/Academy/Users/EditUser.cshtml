@page "{id}"
@using LatinMedia.DataLayer.Entities.User
@model LatinMedia.Web.Pages.Academy.Users.EditUserModel
@{
    ViewData["Title"] = "ویرایش کاربر";
    Layout = "_AcademyLayout";
    List<Role> roles = ViewData["Roles"] as List<Role>;

}

    <form enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="EditUserViewModel.UserId" />
        @*<input type="hidden" id="UserAvatarHidden" asp-for="EditUserViewModel.AvatarName" />*@
        <input type="hidden" asp-for="EditUserViewModel.AvatarName" />
        <input type="hidden" asp-for="EditUserViewModel.Mobile" />
        <input type="hidden" asp-for="EditUserViewModel.AcademyName" />
        <input type="hidden" asp-for="EditUserViewModel.AcademyId" />
        <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">

            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        ویرایش اطلاعات کاربر

                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="item form-group">
                            <label class="control-label col-md-7  ">
                                جنسیت :
                            </label>
                            <div class="col-md-8">
                                <select asp-for="EditUserViewModel.GenderId" asp-items="@(new SelectList((IEnumerable<Gender>)ViewData["GenderList"],"GenderId","GenderName"))" class="form-control col-md-7 col-xs-12"></select>
                                <span class="text-danger" asp-validation-for="EditUserViewModel.GenderId"></span>
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-7  ">
                                موبایل :
                            </label>
                            <div class="col-md-8">
                                <input asp-for="EditUserViewModel.Mobile" disabled="" class="form-control  " type="text">
                                <span class="fa fa-mobile form-control-feedback left" aria-hidden="true"></span>

                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-7  ">
                                نام :
                            </label>
                            <div class="col-md-8">
                                <input asp-for="EditUserViewModel.FirstName" required="" class="form-control  " placeholder="لطفا نام را وارد کنید" type="text">
                                <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                                <span asp-validation-for="EditUserViewModel.FirstName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-7  ">
                                نام خانوادگی :
                            </label>
                            <div class="col-md-8">
                                <input asp-for="EditUserViewModel.LastName" required="" class="form-control  " placeholder="لطفا نام خانوادگی را وارد کنید" type="text">
                                <span class="fa fa-users form-control-feedback left" aria-hidden="true"></span>
                                <span asp-validation-for="EditUserViewModel.LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-7  ">
                                کلمه عبور :
                            </label>
                            <div class="col-md-8">
                                <input asp-for="EditUserViewModel.Password" class="form-control  " placeholder="لطفا کلمه عبور را وارد کنید">
                                <span class="fa fa-key form-control-feedback left" aria-hidden="true"></span>

                            </div>
                        </div>

                        <div class="item  form-group">

                            <div class="col-md-12 col-sm-12 col-xs-12  ">
                                <input asp-for="EditUserViewModel.IsActive" type="checkbox" class="js-switch" data-switchery="true" style="display: none;">
                                &nbsp;
                                <label>فعال / غیر فعال</label>
                            </div>
                        </div>
                        <hr class="col-md-12" />
                        <div class="item form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">

                                <input type="submit" class="btn btn-success" value="ثبت" />
                                <a asp-page="Index" class="btn btn-warning">انصراف</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12col-md-4 col-lg-4 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        تصویر کاربر

                    </h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <img id="imgAvatar" src="/UserAvatar/default.png" class="img-thumbnail" />
                    @*<input asp-for="EditUserViewModel.UserAvatar" type="file" />*@
                </div>

            </div>
        </div>
    </form>

