@page
@model LatinMedia.Web.Pages.PlayMovieModel
@{
    ViewData["Title"] = "PlayMovie";
    Layout = "~/Pages/Shared/_BlankLayout.cshtml";
}


<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست فیلم های کلاس
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
                @if (Model.classMoviesViewModel.Count == 0)
                {
                    <div class="alert alert-danger ">
                        رکوردی یافت نشد
                    </div>
                }

                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">

                            @{
                                int rowCount = 1;
                            }
                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr role="row">
                                        <th>ردیف</th>
                                        <th>شناسه کلاس</th>
                                        <th>نام کلاس</th>
                                        <th>شناسه فیلم</th>
                                        <th>حجم فیلم</th>
                                        <th>نمایش فیلم</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model.classMoviesViewModel)
                                    {
                                        <tr role="row" class="odd">
                                            <td>@rowCount</td>
                                            <td>@item.meetingID</td>
                                            <td>@item.name</td>
                                            <td>@item.recordID</td>
                                            <td>@item.size</td>
                                            <td>
                                                <a href=@item.Url class="btn btn-info btn-xs" target="_blank"> <i class="fa fa-file-movie-o"></i>مشاهده فیلم</a>
                                            </td>
                                        </tr>
                                        rowCount++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


        </div>
                <hr class="col-md-12" />
            </div>
        </div>
    </div>
</div>

