@page "{id}"
@model LatinMedia.Web.Pages.Leon.RhgClass.ClassMoviesModel
@using LatinMedia.Core.Convertors
@using LatinMedia.DataLayer.Entities.Course
@using LatinMedia.Core.Services.Interfaces
@using LatinMedia.Core.Security
@inject ICourseService CourseService
@{
    ViewData["Title"] = "فیلم های کلاس";
    Layout = "~/Pages/Shared/_LeonLayout.cshtml";
}


<h2>فیلم های کلاس</h2>

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست فیلم های کلاس
            </h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>


            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">

            <div class="col-md-12 col-sm-12 col-xs-12">
                @if (Model.BBBServers.Count == 0)
                {
                    <div class="alert alert-danger ">
                        رکوردی یافت نشد
                    </div>
                }

                <div id="datatable-checkbox_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">

                            @{
                                int rowCount = 1;
                            }
                            <table id="datatable-checkbox" class="table table-striped table-bordered bulk_action dataTable no-footer" role="grid" aria-describedby="datatable-checkbox_info">
                                <thead>
                                    <tr role="row">
                                        <th>ردیف</th>
                                        <th>سرور</th>
                                        <th>مشاهده فیلم</th>
                                    </tr>
                                </thead>

                                <tbody>

                                    @foreach (var item in Model.BBBServers)
                                    {
                                        <tr role="row" class="odd">
                                            <td>@rowCount</td>
                                            <td>@item.ServerName</td>
                                            <td>
                                                <a href="/PlayMovie/?CI=@ViewData["ClassId"]&SI=@item.Id" class="btn btn-info btn-xs" target="_blank"> <i class="fa fa-file-movie-o"></i>مشاهده فیلم</a>
                                            </td>
                                        </tr>
                                        rowCount++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
                <hr class="col-md-12" />
                <div class="item form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">
                        <a asp-page="Index" class="btn btn-warning">بازگشت</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>