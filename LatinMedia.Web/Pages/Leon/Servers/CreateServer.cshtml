@page
@using LatinMedia.DataLayer.Entities.User
@model LatinMedia.Web.Pages.Leon.Servers.CreateServerModel
@{
    ViewData["Title"] = "افزودن سرور";
}

<form method="post">
    <div class="col-md-12 col-sm-12 col-xs-12 col-lg-12">

        <div class="x_panel">
            <div class="x_title">
                <h2>
                    افزودن سرور جدید

                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            نام سرور :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="BBBServers.ServerName" required="" class="form-control  " placeholder="عنوان سرور را وارد نمایید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="BBBServers.ServerName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            آدرس سرور :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="BBBServers.ServerUrl" required="" class="form-control  " placeholder="آدرس سرور را وارد نمایید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="BBBServers.ServerUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="item form-group">
                        <label class="control-label col-md-7  ">
                            توکن سرور :
                        </label>
                        <div class="col-md-8">
                            <input asp-for="BBBServers.ServerSharesSecret" required="" class="form-control  " placeholder="توکن سرور را وارد نمایید" type="text">
                            <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="BBBServers.ServerSharesSecret" class="text-danger"></span>
                        </div>
                    </div>

                    <div style="clear:both; height:10px"></div>

                    <div class="item  form-group">

                        <div class="col-md-12 col-sm-12 col-xs-12  ">
                            <input asp-for="BBBServers.IsActive" type="checkbox" class="js-switch" checked="" data-switchery="true" style="display: none;">
                            &nbsp;
                            <label>فعال / غیر فعال</label>
                        </div>
                    </div>

                    <div style="clear:both; height:10px"></div>

                    <div class="item form-group">
                        <div class="col-md-12 col-sm-12 col-xs-12 col-md-offset-5">

                            <input type="submit" class="btn btn-success" value="ثبت" />
                            <a asp-page="Index" class="btn btn-warning">انصراف</a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</form>



