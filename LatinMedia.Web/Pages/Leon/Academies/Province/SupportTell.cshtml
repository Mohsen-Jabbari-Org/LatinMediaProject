@page "{StateId}"
@using LatinMedia.Core.Convertors
@using LatinMedia.DataLayer.Entities.User
@model LatinMedia.Web.Pages.Leon.Academies.Province.SupportTellModel
@{
    ViewData["Title"] = "افزودن تلفن پشتیبانی";
    List<SupportTell> supportTell = ViewData["Tell"] as List<SupportTell>;
}
<form method="post">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">

        <div class="x_panel">
            <div class="x_title">
                <h2>
                    افزودن تلفن پشتیبانی


                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div class="row">

                    <div class="item form-group">
                        <label class="control-label col-md-12 col-lg-12">
                            تلفن جدید :
                        </label>
                        <div class="col-md-9" style="margin-top:10px">
                            <input type="text" id="Tell" name="Tell" class="form-control" placeholder="شماره تماس را وارد نمایید">
                            <span class="fa fa-bookmark form-control-feedback left" aria-hidden="true"></span>
                        </div>

                        <div class="col-md-3" style="margin-top:10px">
                            <input type="submit" class="btn btn-success" value="ثبت" />
                            <a href="/Leon/Academies/Province/" class="btn btn-warning">بازگشت</a>
                        </div>
                    </div>

                    <div class=" item form-group">
                        <label class="control-label col-md-12 col-lg-12">
                            لیست تلفن های استان :
                        </label>
                        <div class="col-md-9 col-lg-9">
                            <select id="Tells" asp-for="SupportTell.StateId" class="form-control" multiple="">
                                @foreach (var item in supportTell)
                                {
                                    <option value="@item.TellId"> @item.Tell</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
